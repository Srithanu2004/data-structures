#include<stdio.h>
void main()
{
 int i,n,number[30];
 printf("enter the value of the  n=");
 scanf("%d",&n);
 printf("enter the numbers\n");
 for(i=0;i<n;i++)
 {
 scanf("%d",&number[i]);
 }
 number[n]=number[0];
 for(i=0;i<n;i++)
 {
  number[n]=number[0];
  for(i=0;i<n;i++)
  {
   number[i]=number[i+1];
   }
   printf("cyclically permuted numbers are given below\n");
   for(i=0;i<n;i++)
   printf("%d\n",number[i]);
   }
   }
   output:-
   enter the value of the n=4
   enter the numbers
   3
   40
   100
   68
   cyclically permuted numbers are given below
   40
   100
   68
   3
